<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme -->
    <style name="Theme.SearchBox" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>
        <item name="colorOutline">@color/outline_dark</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/surface_dark</item>
    </style>

    <style name="Theme.SearchBox.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:windowBackground">@color/surface_dark</item>
    </style>
</resources>